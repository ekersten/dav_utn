   <param name="C_00" value="tipo='num&eacute;rico' id='EE.r' interfaz='barra' regi&oacute;n='sur' valor='3' nombre='r' min='2.6' max='5' visible='si' acci&oacute;n=' '">
   <param name="C_01" value="tipo='gr&aacute;fico' id='A' color='azul' color-int='rojo' expresi&oacute;n='(-7,1.25)'">
   <param name="A_00" value="id='EE.dr' expresi&oacute;n='0.2' evaluar='una-sola-vez' constante='si'">
   <param name="A_01" value="id='EE.a' expresi&oacute;n='asen(2.5/EE.r)*180/pi' evaluar='siempre' constante='si'">
   <param name="A_02" value="inicio='s=-A.x;h=A.y;r=EE.r;f=r/2;g=ra&iacute;z(r^2-h^2)' hacer='s1=1/(1/f-1/s);h1=h*s1/s;aux=(g-f)/(s-r);s2=r*(aux+1/2)/(aux+1);h2=h*(r-s2)/(s-r);aux=(g-f)/s;s3=f/(1-aux);h3=h*s3/s;disp=(h1-h2)^2+(s1-s2)^2;disp=disp+(h3-h2)^2+(s3-s2)^2;disp=disp+(h3-h1)^2+(s3-s1)^2' mientras='1<=0' id='calculos' evaluar='siempre' algoritmo='si'">
   <param name="A_03" value="id='K' expresi&oacute;n='(r+ra&iacute;z((s-r)^2+h^2))/ra&iacute;z((s-r)^2+h^2)' evaluar='siempre' constante='si'">
   <param name="A_04" value="id='M' expresi&oacute;n='10/ra&iacute;z(s^2+h^2)' evaluar='siempre' constante='si'">
   <param name="G_00" value="tipo='macro' expresi&oacute;n='optica/espejoEsferico' nombre='EE'">
   <param name="G_01" value="tipo='punto' color='negro' expresi&oacute;n='(-r,0)' texto='C' tama&ntilde;o='3'">
   <param name="G_02" value="tipo='punto' color='negro' expresi&oacute;n='(-f,0)' texto='F' tama&ntilde;o='3'">
   <param name="G_03" value="tipo='flecha' color='gris' expresi&oacute;n='(-s,0)(-s,h)' ancho='3' ancho='3' punta='3' flecha='amarillo'">
   <param name="G_04" value="tipo='flecha' color='gris' expresi&oacute;n='(-s3,0)(-s3,-h3)' ancho='3' ancho='3' punta='3' flecha='amarillo'">
   <param name="G_05" value="tipo='flecha' color='gris' expresi&oacute;n='(-s2,0)(-s2,-h2)' ancho='3' ancho='3' punta='3' flecha='amarillo'">
   <param name="G_06" value="tipo='flecha' color='gris' expresi&oacute;n='(-s1,0)(-s1,-h1)' ancho='3' ancho='3' punta='3' flecha='amarillo'">
   <param name="G_07" value="tipo='segmento' color='rojo' expresi&oacute;n='(-s,h)(g-r,h)' tama&ntilde;o='0'">
   <param name="G_08" value="tipo='curva' color='rojo' expresi&oacute;n='(g-r+(-f-g+r)*10*t,h-h*10*t)' visible='no'">
   <param name="G_09" value="tipo='curva' color='00dd55' expresi&oacute;n='(-s+(-r+s)*K*t,h-h*K*t)' t.pasos='1' visible='no'">
   <param name="G_10" value="tipo='segmento' color='0088ff' expresi&oacute;n='(-s,h)(0,0)' tama&ntilde;o='0'">
   <param name="G_11" value="tipo='curva' color='0088ff' expresi&oacute;n='(-s*M*t,-h*M*t)' t.pasos='1' visible='no'">
   <param name="G_12" value="tipo='texto' dibujar-si='disp<0.02' color='azul' expresi&oacute;n='[240,20]' texto='imagen bien definida' fuente='Serif,PLAIN,20'">
   <param name="G_13" value="tipo='texto' dibujar-si='disp>=0.02' color='azul' expresi&oacute;n='[240,20]' texto='imagen difusa' fuente='Serif,PLAIN,20'">
</applet>
</p>
