   <param name="E_00" value="despl_imagen='arr-izq' fondo='blanco' red='grisClaro' red10='negro' ejes='gris' texto='rosa'">
   <param name="C_00" value="tipo='num&eacute;rico' id='LE.r' interfaz='pulsador' regi&oacute;n='sur' valor='1' nombre='LE.r' incr='0.01' min='0' visible='si' acci&oacute;n=' '">
   <param name="C_01" value="tipo='num&eacute;rico' id='LE.a' interfaz='pulsador' regi&oacute;n='sur' valor='0.2' nombre='LE.a' incr='0.01' min='0' max='0.5' visible='si' acci&oacute;n=' '">
   <param name="C_02" value="tipo='num&eacute;rico' id='LE.r1' interfaz='pulsador' regi&oacute;n='sur' valor='3' nombre='LE.r1' incr='0.05' visible='si' acci&oacute;n=' '">
   <param name="C_03" value="tipo='num&eacute;rico' id='LE.r2' interfaz='pulsador' regi&oacute;n='sur' valor='-2' nombre='LE.r2' incr='0.05' visible='si' acci&oacute;n=' '">
   <param name="G_00" value="tipo='macro' expresi&oacute;n='optica/lenteEsferica' nombre='LE'">
</applet>
</p>
