   <param name="A_01" value="id='a' expresi&oacute;n='30' evaluar='una-sola-vez' constante='si'">
   <param name="A_02" value="id='dr' expresi&oacute;n='0.1' evaluar='una-sola-vez' constante='si'">
   <param name="A_03" value="id='rojo' expresi&oacute;n='0.5' evaluar='una-sola-vez' constante='si'">
   <param name="A_04" value="id='verde' expresi&oacute;n='0.7' evaluar='una-sola-vez' constante='si'">
