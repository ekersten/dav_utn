   <param name="G_03" value="tipo='segmento' dibujar-si='r#0' color='negro' expresi&oacute;n='(-r+r*cos(s*a*pi/180),r*sen(s*a*pi/180))(-r+(r+dr)*cos(s*a*pi/180),(r+dr)*sen(s*a*pi/180))' familia='s' s.intervalo='[-1,1]' s.pasos='1' tama&ntilde;o='0'">
